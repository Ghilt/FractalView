<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white_1"
    android:layout_height="match_parent"
    android:padding="8dp"
    tools:context=".StartFragment">

    <ImageButton
        android:id="@+id/settings_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/start_settings"
        android:src="@drawable/settings_cogwheel"
        android:background="@drawable/rounded_card_ripple"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="5dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:text="@string/start_welcome"
        android:elevation="@dimen/view_elevation_large"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:id="@+id/flare_background_1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/ancestor_gradient_anim"
        app:layout_constraintBottom_toTopOf="@id/flare_background_2"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.4"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/flare_border_1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/circle_frame"
        app:layout_constraintBottom_toTopOf="@id/flare_background_2"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.4"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/configure_button"
        style="@style/WhiteRoundedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="38dp"
        android:layout_marginEnd="38dp"
        android:padding="10dp"
        android:text="@string/start_configure_button"
        android:drawablePadding="20dp"
        android:gravity="start|center"
        android:drawableEnd="@drawable/icon_edit"
        app:layout_constraintBottom_toBottomOf="@id/flare_background_1"
        app:layout_constraintEnd_toEndOf="@id/flare_background_1"
        app:layout_constraintStart_toStartOf="@id/flare_background_1"
        app:layout_constraintTop_toTopOf="@id/flare_background_1" />

    <View
        android:id="@+id/flare_background_2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/ancestor_gradient_anim"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintHeight_percent="0.25" />

    <View
        android:id="@+id/flare_border_2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/circle_frame"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintHeight_percent="0.25" />

    <Button
        android:id="@+id/load_saved_config_button"
        style="@style/WhiteRoundedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="38dp"
        android:layout_marginEnd="38dp"
        android:padding="10dp"
        android:text="@string/start_load_configuration_button"
        android:gravity="start|center"
        android:drawablePadding="20dp"
        android:drawableEnd="@drawable/icon_load"
        app:layout_constraintBottom_toBottomOf="@id/flare_background_2"
        app:layout_constraintEnd_toEndOf="@id/flare_background_2"
        app:layout_constraintStart_toStartOf="@id/flare_background_2"
        app:layout_constraintTop_toTopOf="@id/flare_background_2" />

</androidx.constraintlayout.widget.ConstraintLayout>