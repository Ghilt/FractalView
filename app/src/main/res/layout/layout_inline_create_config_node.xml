<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/inline_create_operator_controls"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout">

    <Button
        android:id="@+id/select_operand_1_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:freezesText="true"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/select_operator_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/placeholder_default_operator"
        android:freezesText="true"
        app:layout_constraintStart_toEndOf="@id/select_operand_1_button"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/select_operand_2_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:freezesText="true"
        app:layout_constraintStart_toEndOf="@id/select_operator_button"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/select_operand_3_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:freezesText="true"
        app:layout_constraintStart_toEndOf="@id/select_operand_2_button"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/create_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/general_accept"
        android:translationZ="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/select_operator_button" />

    <Button
        android:id="@+id/clear_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:padding="0dp"
        android:text="x"
        android:translationZ="2dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</merge>