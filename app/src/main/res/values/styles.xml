<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ConfigNode">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:elevation">2dp</item>
        <item name="android:background">@drawable/rounded_card_ripple</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:stateListAnimator">@animator/lift_on_touch</item>
    </style>

    <style name="ConfigNodeLabel">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white_1</item>
        <item name="android:background">@drawable/configuration_node_label_background</item>
    </style>

    <style name="ConfigNodeLabelReference">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:padding">@dimen/node_label_padding</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white_1</item>
        <item name="android:background">@drawable/rounded_card</item>
    </style>

    <style name="InlineCreateConfigNodeView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:background">@drawable/ancestor_gradient_anim</item>
    </style>

    <!--Not the parent style i want, but i cant seem to inherit from @android:attr/buttonStyleSmall-->
    <style name="WhiteRoundedButton" parent="@android:style/Widget.Button.Small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/rounded_card_ripple</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:minWidth">48dp</item>
    </style>

    <style name="WhiteRoundedButton.Accept">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:minWidth">164dp</item>
        <item name="android:text">@string/general_accept</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:textColor">@color/bright_green</item>
    </style>

    <style name="PlayButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:background">@drawable/rounded_end_ripple</item>
        <item name="android:src">@drawable/play_fractal</item>
    </style>

    <style name="BlueButton">
        <item name="android:backgroundTint">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/white_1</item>
    </style>


    <style name="ConfigNodeGuideline">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="layout_constraintGuide_begin">45dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="FreeFormInput">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:elevation">@dimen/view_elevation_large</item>
        <item name="android:background">@drawable/rounded_card</item>
    </style>

</resources>
