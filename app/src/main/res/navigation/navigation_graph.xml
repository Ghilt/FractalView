<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools" android:id="@+id/navigation_graph"
            app:startDestination="@id/startFragment">

    <fragment android:id="@+id/startFragment" android:name="se.admdev.fractalviewer.StartFragment"
              android:label="fragment_start" tools:layout="@layout/fragment_start">
        <action
            android:id="@+id/action_startFragment_to_coreConfigFragment"
            app:destination="@id/coreConfigFragment"
            app:exitAnim="@anim/slide_out_left_rotate"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
        <action
            android:id="@+id/debugShowDragonCurve"
            app:destination="@id/fractalCanvasFragment"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/fade_out" />
    </fragment>
    <fragment android:id="@+id/coreConfigFragment"
              android:name="se.admdev.fractalviewer.ancestorconfig.CoreConfigFragment"
              android:label="CoreConfigFragment">
        <action
            android:id="@+id/showFractal"
            app:destination="@id/fractalCanvasFragment"
            app:exitAnim="@anim/slide_out_left_rotate"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>
    <fragment android:id="@+id/fractalCanvasFragment"
              android:name="se.admdev.fractalviewer.canvas.FractalCanvasFragment"
              android:label="FractalCanvasFragment">
        <argument
            android:name="ancestor_core"
            app:argType="se.admdev.fractalviewer.ancestorconfig.model.AncestorCore"
            app:nullable="true"
            android:defaultValue="@null" />
    </fragment>
</navigation>